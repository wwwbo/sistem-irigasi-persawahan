  <!-- get api from server -->
   <script>

    var socket = io.connect('http://127.0.0.1:3000');

    socket.on('connect', ()=>{
      document.getElementById("socketio").innerHTML = "socket terhubung";
    });

    socket.on('notification', function (data) {
      $.each(data.lembab, (index, items)=>{
        tanggal = items.tanggal;
        water = items.ketinggian;
        soil = items.kelembaban;
        ket = items.keterangan;
        waktu = items.waktu_pompa;
      })

      $('time').html('Last Update:' + data.time);
      $('#display').html('tanggal: '+ tanggal);
      $('#water').html(water + " Cm");
      $('#soil').html(soil + " %");
      $('#ket').html(ket);
      $('#waktu').html(waktu + " Jam")
    });   
  </script>

